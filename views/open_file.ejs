<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
  <link rel="stylesheet" href="../stylesheets/style.css">
</head>

<body>
  <div id="main">
    <div id="left">
      <h2>SastaVScode</h2>
      <div id="creater">
        <h3>Folder name</h3>
        <div id="iconCover">
          <div id="icon">
            <i id="createFile" class="ri-file-add-line"></i>
            <i id="createFolder" class="ri-folder-add-line"></i>
            <a href="/">
              <i id="refresh" class="ri-restart-line"></i>
            </a>
          </div>
        </div>
      </div>
      <div id="enterFile" class="typeBar">
        <form action="fileCreation">
          <input type="text" placeholder="create file" name="filename">

        </form>

      </div>
      <div id="enterFolder" class="typeBar">
        <form action="folderCreation">
          <input type="text" placeholder="create folder" name="foldername">
        </form>

      </div>

      <div id="files">
        <% files.forEach(function(file){ %>
          <% if(file.isFile===true){ %>
            <div class="file">
              <div class="direntName">
                <i class="ri-folder-line"></i>
                <a href=" /file/<%= file.name %> ">
                  <h4>
                    <%= file.name %>
                  </h4>
                </a>
              </div>
              <div class="editDelete">
                <div class="editDelete_in">
                  <i class="ri-pencil-line"></i>
                  <i class="ri-delete-bin-5-line"></i>
                </div>
              </div>
            </div>
            <% } else { %>
              <div class="file">
                <div class="direntName">
                  <i class="ri-file-text-line"></i>
                  <a href=" /file/<%= file.name %> ">
                    <h4>
                      <%= file.name %>
                    </h4>
                  </a>
                </div>
                <div class="editDelete">
                  <div class="editDelete_in">
                    <i class="ri-pencil-line"></i>
                    <i class="ri-delete-bin-5-line"></i>
                  </div>

                </div>
              </div>
              <% } %>
                <% }) %>
      </div>


    </div>
    <div id="right">
      <div id="r_nav">
        <div class="nav_dirent">
          <h4><%= filename %></h4>
          <a href="/"><i class="ri-close-line"></i></a>
        </div>
      </div>
      <textarea>
        <%= filedata %>
      </textarea>
    </div>




    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.2/gsap.min.js"
      integrity="sha512-gsEItzcNkWxfxHjr4BaEZAd9YuRWYjxnj7c/yukcZ0/nWehUb5TjJNyyv1ApCU2DFH/qgw+stFZHPOKnoQnIuQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="../javascripts/script.js"></script>

</body>

</html>